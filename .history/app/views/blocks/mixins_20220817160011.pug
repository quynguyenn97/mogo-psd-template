mixin menuLink(title, href = "#")
	li.header-menu-item 
		a.header-menu-link(href= href)= title

mixin headerBottomItem (number, title)
	.header-bottom-item 
		span.header-bottom-number= number
		span.header-bottom-text= title

mixin blockBox(caption, title, desc)
	.block-box
		h3.block-box-caption= caption
		h3.block-box-title= title
		if desc
			p.block-box-desc= desc

mixin aboutItem(src, title, iconClass, alt = "" )
	.about-item 
		img.about-image(src = src, alt = alt)
		.about-content 
			i.about-icon(class= iconClass)
			span.about-title= title		

mixin numberItem(number, title)
	.number-item 
		h4.number-item-count= number
		span.number-item-text= title

mixin serviceItem(src, title, desc)
	.service-item 
		img.service-item-icon(src= src)
		.service-item-info 
			h3.service-item-title= title
			p.service-item-desc= desc

mixin wedoItem(src, title, desc, active = "") 
	.wedo-item(class= active)
		.wedo-item-header
			img.wedo-item-icon(src= src)
			h3.wedo-item-title= title 
			i.fal.fa-angle-up.wedo-item-arrow 
		.wedo-item-content 
			.wedo-item-text= desc

mixin teamSocial(facebook= "#", twitter= "#", pinterest= "#", instagram= "#")
	ul.team-social 
		li.team-social-item 
			a.team-social-link(href= facebook)
				i.fab.fa-facebook-f
		li.team-social-item 
			a.team-social-link(href= twitter)
				i.fab.fa-twitter
		li.team-social-item 
			a.team-social-link(href= pinterest)
				i.fab.fa-pinterest
		li.team-social-item 
			a.team-social-link(href= instagram)
				i.fab.fa-instagram

mixin teamItem(src, name, position) 
	.team-item 
		.team-main 
			img(src= src).team-image
			.team-content 
				if block 
					block
		.team-info 
			h3.team-name= name 
			span.team-position= position

mixin workItem(src= "../images/img-work1.png", icon= "fa.fa-home", title= "Creatively designed ", full ="", desc= "Lorem ipsum dolor sit") 
	.work-item(class= full) 
		img.work-image(src= src)
		.work-content 
			i.work-icon(class= icon)
			h3.work-title= title
			span.work-desc.text.text--light.text--italic= desc 

mixin peopleItem(src= "../images/img-people.png", name= "Matthew Dix", job= "Graphic design", desc= "Lorem ipsum dolor sit amet consectetur adipisicing elit. Cupiditate error obcaecati facilis, inventore sint tempora, quae explicabo officia deleniti nam et consectetur tempore distinctio tenetur accusantium expedita nisi quam dolorem.")
	li.people-item 
		img.people-avatar(src= src)
		.people-info 
			h3.people-name= name 
			span.people-job.text.text--light= job
			p.people-desc.text= desc

mixin storyItem(src= "../images/img-blog1.png", number= "15", text= "Jan", title= "Lorem ipsum, dolor sit amet consectetur adipisicing elit. ", desc="Lorem ipsum dolor sit amet consectetur adipisicing elit. Placeat perspiciatis, laborum repellendus aspernatur doloribus, corporis quisquam unde, obcaecati voluptatum facere delectus? Exercitationem sunt assumenda vel provident, libero quisquam corporis dolor! ", view= "17", comment= "17")
	li.story-item
		.story-media 
			img.story-image(src=src)
			.story-date 
				span.story-date-number= number
				span.story-date-text.text= text
		h3.story-title= title 
		.story-desc.text
			.story-desc-inner= desc 
		.story-meta 
			.story-meta-item
				i.fa.fa-eye.story-meta-icon 
				span.story-meta-number.text= view
			.story-meta-item
				i.fa.fa-comment.story-meta-icon 
				span.story-meta-number.text= comment

mixin quoteItem(src="../images/img-quote.png", type = false, desc="Lorem ipsum, dolor sit amet consectetur adipisicing elit. Exercitationem non eius doloribus hic. Numquam libero sapiente mollitia a. Voluptas quis ratione vel. Sint non quam repellendus ipsam illo vitae sunt?", author="John Doe")
	.quote-item
		if type == false 
			.quote-icon 
				img(src = src)
		else 
			.quote-image
				img(src = src)
		.quote-info
			p.quote-desc= desc
			span.quote-author= author